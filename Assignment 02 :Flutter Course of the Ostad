//method 01
//we have to change the students result number into the function manually


String studentGrade(String studentName, int testScore) {
  if (testScore == null) {
    return "Invalid test score";
  } else if (testScore < 0 || testScore > 100) {
    return "Invalid Grade";
  } else if (testScore >= 90) {
    return "A";
  } else if (testScore >= 80) {
    return "B";
  } else if (testScore >= 70) {
    return "C";
  } else if (testScore >= 60) {
    return "D";
  } else {
    return "F";
  }
}

void main() {
  String studentName = "Subhasish Dutta";
  int testScore = 85;

  String grade = studentGrade(studentName, testScore);
  print("$studentName's grade: $grade");
}





//method 02
// we can use the user input (students name and the students grade number)from the user

import 'dart:io';

String studentGrade(String name, int score) {
  if (score < 0 || score > 100) {
    return "Invalid Grade";
  } else if (score >= 90) {
    return "$name got the grade : A";
  } else if (score >= 80) {
    return "$name got the grade : B";
  } else if (score >= 70) {
    return "$name got the grade : C";
  } else if (score >= 60) {
    return "$name got the grade : D";
  } else {
    return "$name got the grade : F";
  }
}

void main() {
  print("Enter your name:");

  String studentName = stdin.readLineSync()!;

  print("Enter your test score:");
  int? testScore = int.tryParse(stdin.readLineSync()!);

  if (testScore == null) {
    print("Invalid test score.");
    return;
  }

  String grade = studentGrade(studentName, testScore);

  print(grade);
}

